
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read and update their own profile
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth.uid != null;
    }

    // Users can only manage their own transactions
    match /transactions/{transactionId} {
      allow read, write, delete: if isOwner(resource.data.user_id);
      allow create: if isOwner(request.resource.data.user_id);
    }

    // Users can only manage their own statements
    match /statements/{statementId} {
      allow read, write, delete: if isOwner(resource.data.user_id);
      allow create: if isOwner(request.resource.data.user_id);
    }

    // All authenticated users can read the list of categories
    // Only admins (future implementation) should be able to write
    match /categories/{categoryId} {
      allow read: if request.auth.uid != null;
      allow write: if false; // To be implemented (e.g., admin role)
    }
  }
}
