# BrainBudget Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
FLASK_ENV=development
HOST=127.0.0.1
PORT=5000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"

# Firebase Client Configuration (for frontend)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Plaid API (for Level 2 features)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-key
PLAID_ENV=sandbox

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Settings (optional - defaults are set in config.py)
# MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
# ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg

# Database Settings (optional - for future use)
# DATABASE_URL=postgresql://user:pass@localhost/brainbudget

# Email Settings (optional - for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Analytics (optional - for future features)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags (optional)
# ENABLE_PLAID_INTEGRATION=False
# ENABLE_WHATSAPP_INTEGRATION=False
# ENABLE_ADVANCED_AI_FEATURES=False

