# BrainBudget Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
FLASK_ENV=development
HOST=127.0.0.1
PORT=5000

# Security Configuration (Production)
REDIS_URL=redis://localhost:6379/0

# Firebase Configuration (Required)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"

# Firebase Client Configuration (for frontend)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Google Gemini AI (Required)
GEMINI_API_KEY=your-gemini-api-key-here

# Plaid API Configuration (Required for banking features)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-key
PLAID_ENV=sandbox
PLAID_WEBHOOK_SECRET=your-plaid-webhook-secret

# Firebase Cloud Messaging (Optional)
FCM_SERVER_KEY=your-fcm-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Currency Configuration
DEFAULT_CURRENCY=USD

# Notification Configuration
NOTIFICATION_RATE_LIMIT_DAILY=10
NOTIFICATION_QUIET_HOURS_START=22  # 10 PM
NOTIFICATION_QUIET_HOURS_END=8     # 8 AM

# Development Tools (Optional)
# Uncomment for development debugging
# FLASK_DEBUG_TOOLBAR_ENABLED=True

# Production Configuration Override
# Use these values in production environment
# SECRET_KEY=your-production-secret-key-64-characters-long
# DEBUG=False
# FLASK_ENV=production
# SESSION_COOKIE_SECURE=True
# REDIS_URL=redis://your-production-redis:6379/0
# CORS_ORIGINS=https://yourdomain.com

